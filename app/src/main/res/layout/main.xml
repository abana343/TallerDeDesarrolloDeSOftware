<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/action_conectar"
        android:id="@+id/RB"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:icon="@drawable/abc_ic_menu_share_mtrl_alpha"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/RB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/icono_coneccion"
        android:layout_gravity="center_horizontal"
        android:onClick="conectarServidor" />

    <TextView
        android:id="@+id/estado_coneccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconectado"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10">

        <ImageButton
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:id="@+id/imageButton"
            android:src="@drawable/galeria"
            android:background="@drawable/btn_circle"
            android:layout_weight="0.15"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="top|left"
            android:layout_width="120dp"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton2"
            android:layout_row="1"
            android:layout_column="9"
            android:src="@drawable/ruta"
            android:layout_gravity="top|right"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_circle"
            android:layout_marginRight="20dp"
            android:onClick="onClickButtonListaRutas" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton3"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/control"
            android:background="@drawable/btn_circle"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:onClick="onClickButtonIrMovimiento" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton4"
            android:layout_row="3"
            android:layout_column="9"
            android:src="@drawable/sensor"
            android:background="@drawable/btn_circle"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:onClick="adelante" />
    </GridLayout>

</LinearLayout>
