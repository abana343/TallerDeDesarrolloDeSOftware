<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/opcion"
    android:weightSum="1">


    //Titulo del layout
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ip de control"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    //primer marca de IP
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.11">

        //texto de robotino
        <TextView
            android:id="@+id/textRobotino"
            android:text="IP Robotino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="27dp" />

         //entrada de texto robotino.
        <EditText
            android:id="@+id/IpRobotino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese IP robotino"
            android:layout_gravity="center_vertical"
            />
        </LinearLayout>

    //segunda parte de IP
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.09">

        //texto de webservice
        <TextView
            android:id="@+id/textWebservice"
            android:text="IP WebService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="10dp"
            />

        //entradad de IP webservice
        <EditText
            android:id="@+id/IpWebservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese IP Webservice"
            />
    </LinearLayout>

    //titulo de control
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Control"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:layout_marginTop="20dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="0.15"        >

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/imageView2"
            android:layout_weight="0.05"
            android:src="@drawable/analogo"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/btn_circle"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/imageView3"
            android:src="@drawable/tactil"
            android:layout_row="0"
            android:layout_column="7"
            android:scaleType="fitXY"
            android:background="@drawable/btn_circle"
            android:layout_marginRight="10dp"/>


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tema AplicaciÃ³n"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.25">
        //texto de webservice
        <TextView
            android:id="@+id/texTema"
            android:text="Tema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        //entradad de IP webservice

        <EditText
            android:id="@+id/tema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tema Defecto" />
    </LinearLayout>

</LinearLayout>
